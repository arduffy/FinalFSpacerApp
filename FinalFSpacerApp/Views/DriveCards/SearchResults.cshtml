
@model IEnumerable<DriveCard>
@{
    ViewData["Title"] = "SearchResults";
}

<h2>SearchResults</h2>

@if (Model.Count() == 0)
{
    <p>No drive card matching those terms were found!</p>
}
else
{
    <p>The following drive cards were found:</p>
    <ul>
        @foreach (var d in Model)
        {
            <li>@d.Model : @d.Ratio : @d.DriveNumber : @d.GearNumber</li>

        }
    </ul>
}
